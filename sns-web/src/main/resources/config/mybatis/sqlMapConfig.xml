<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- 전역 설정 -->
    <settings>
     
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <setting name="jdbcTypeForNull" value="NULL"/>
        <setting name="cacheEnabled" value="true"/>
        <setting name="lazyLoadingEnabled" value="true"/>
        <setting name="aggressiveLazyLoading" value="false"/>
        <setting name="multipleResultSetsEnabled" value="true"/>
        <setting name="useGeneratedKeys" value="true"/>
        <setting name="useColumnLabel" value="true"/>
        <setting name="logImpl" value="SLF4J"/>
    </settings>

    <!-- 타입 별칭 정의 -->
    <typeAliases>
  
        <typeAlias type="kr.ac.kopo.sns.vo.UserVO" alias="userVO"/>
        
  
        <typeAlias type="kr.ac.kopo.sns.vo.PostVO" alias="postVO"/>
        

        <typeAlias type="kr.ac.kopo.sns.vo.CommentVO" alias="commentVO"/>
        

        <typeAlias type="kr.ac.kopo.sns.vo.ReportVO" alias="reportVO"/>
        
      
     
    </typeAliases>

    <!-- 타입 핸들러 (Oracle 특화) -->
    <typeHandlers>
        <!-- Oracle DATE 타입을 java.util.Date로 처리 -->
        <typeHandler handler="org.apache.ibatis.type.DateTypeHandler" javaType="java.util.Date" jdbcType="TIMESTAMP"/>
        <typeHandler handler="org.apache.ibatis.type.DateTypeHandler" javaType="java.util.Date" jdbcType="DATE"/>
        
        <!-- Oracle CLOB 타입을 String으로 처리 -->
        <typeHandler handler="org.apache.ibatis.type.ClobTypeHandler" javaType="String" jdbcType="CLOB"/>
    </typeHandlers>

