<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.ac.kopo.sns.dao.ReportDAO">

    <!-- ReportVO 매핑 (예시) -->
    <resultMap id="reportMap" type="reportVO">
        <id property="reportId" column="REPORT_ID"/>
        <result property="postId" column="POST_ID"/>
        <result property="userId" column="USER_ID"/>
        <result property="reason" column="REASON"/>
        <result property="createdAt" column="CREATED_AT"/>
        <!-- 필요한 컬럼 추가 -->
    </resultMap>

    <!-- 신고 목록 조회 예시 -->
    <select id="selectReportList" resultMap="reportMap">
        SELECT
            REPORT_ID,
            POST_ID,
            USER_ID,
            REASON,
            CREATED_AT
        FROM REPORTS
        ORDER BY CREATED_AT DESC
    </select>

    <!-- 신고 등록 예시 -->
    <insert id="insertReport" parameterType="reportVO">
        INSERT INTO REPORTS (
            POST_ID, USER_ID, REASON, CREATED_AT
        ) VALUES (
            #{postId}, #{userId}, #{reason}, SYSDATE
        )
    </insert>

    <!-- 필요에 따라 추가적인 report 관련 쿼리 작성 -->

</mapper>
